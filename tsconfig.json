{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
 "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ESNext"],
    "sourceMap": true,
    "jsxFactory": "ReactSphere.createElement",  // Point to your custom createElement function
    "jsx": "react" , // or "react-jsx" depending on your setup
    "declaration": false,
    "noEmit": true,
  "emitDeclarationOnly": false,
  "isolatedModules": true,
  "allowImportingTsExtensions": true

  },
  "include": ["src/**/*", "type.ts" ],
  "exclude": ["node_modules"]
}
