{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ESNext"],
    "sourceMap": true,
    "jsxFactory": "ReactSphere.createElement",
    "jsx": "react",
    "declaration": true,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "isolatedModules": false,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "type.ts"],
  "exclude": ["node_modules"]
}
